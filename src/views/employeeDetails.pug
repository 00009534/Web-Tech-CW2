extends components/layout

block content
    h1.main-content__heading #{employee.fullName}
    .employee-data
        img(src=`/static/images/${employee.photo}` alt=`${employee.fullName}'s photo`)
        .employee-info
            p
                span Department:
                | #{employee.department === 'hr' ? 'Human Resources': employee.department}
            p
                span Position:
                | #{employee.jobPosition}
            p
                span Age:
                | #{employee.age}
            p
                span Phone number:
                a(href=`tel:${employee.position}`) #{employee.phone}
            p
                span Email address:
                a(href=`mailto:${employee.email}`) #{employee.email}